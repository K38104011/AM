@{
    ViewBag.Title = "Add Many Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box-header with-border">
    <h3 class="box-title">Add many groups</h3>
</div>
<!--/.box header-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="box-body">
    <div class="form-horizontal">
        <input value="ou=AM, ou=People, dc=maxcrc, dc=com" id="ParentDn" name="ParentDn" type="hidden" />
        <div class="form-group">
            <label for="parent-group" class="control-label col-md-2">Parent Group</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="parentGroup" value="AM" placeholder="Parent group name" readonly>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <div id="data">
                </div>
            </div>
        </div>
    </div>
</div>
<!--/.box body-->
<div class="box-footer clearfix pull-right">
    <input type="submit" value="Add many groups" id="btn-SaveManyGroups" class=" btn btn-info" />
    <button type="button" class="btn btn-default" onclick="location.href = '/Home'">Cancel</button>
</div>
}
            

